extends layout
block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Sign Up
					div.account-wall
						img(class='profile-img', src='/images/signup_icon.png')
						form(class='form-signin', action='/user/signup', method='POST' style="padding: 20px 0")
							input(type='text', name='firstName' class='form-control', placeholder='First Name',required, autofocus)
							input(type='text', name='secondName' class='form-control', placeholder='Second Name',required, autofocus)
							input(type='email', name='username' class='form-control', placeholder='Email Id',required, autofocus)
							input(type='password', name='password' class='form-control', placeholder='Password', required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Sign Up
							span.clearfix

					#error
					if error
						h1.text-center.error-message #{error}